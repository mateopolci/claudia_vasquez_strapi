{
  "kind": "collectionType",
  "collectionName": "artworks",
  "info": {
    "singularName": "artwork",
    "pluralName": "artworks",
    "displayName": "Artwork",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": false,
      "default": "Sin Título",
      "maxLength": 50
    },
    "support": {
      "type": "enumeration",
      "enum": [
        "Lienzo",
        "Papel de algodón"
      ],
      "required": true
    },
    "size": {
      "type": "string",
      "required": true,
      "regex": "^\\d+x\\d+$"
    },
    "available": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "code": {
      "type": "string",
      "unique": true,
      "required": true,
      "maxLength": 8,
      "minLength": 8,
      "regex": "^CV\\d{6}$"
    },
    "serie": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::serie.serie",
      "inversedBy": "artworks"
    }
  }
}
